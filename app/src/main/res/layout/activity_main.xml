<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_bg"
    tools:context=".MainActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp" >


    <ImageView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:id="@+id/imageview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"



        />


    <androidx.cardview.widget.CardView
app:layout_constraintTop_toBottomOf="@+id/imageview"

        android:id="@+id/cv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spade_middle"
        android:elevation="@dimen/spade_medium"
        app:cardBackgroundColor="#fcfcfc"
        app:cardCornerRadius="@dimen/spade_medium"
        app:cardElevation="@dimen/spade_large"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:gravity="center">



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spade_middle"
        android:hint="نام و نام خانوادگی"
        app:hintTextColor="@color/black"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:fontFamily="@font/peyda_regular"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center|right"
            android:inputType="phone" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spade_middle"
        android:hint="مهارت"
        app:hintTextColor="@color/black"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:fontFamily="@font/peyda_regular"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center|right"
            android:inputType="phone" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spade_middle"
        android:hint="شغل"
        app:hintTextColor="@color/black"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:fontFamily="@font/peyda_regular"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center|right"
            android:inputType="phone" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spade_middle"
        android:hint="تلفن همراه"
        app:hintTextColor="@color/black"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:fontFamily="@font/peyda_regular"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center|right"
            android:inputType="phone" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spade_middle"
        android:hint="کجا دیده شده"
        app:hintTextColor="@color/black"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:fontFamily="@font/peyda_regular"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center|right"
            android:inputType="phone" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="@dimen/spade_middle"
        android:hint="توضیحات"

        app:hintTextColor="@color/black"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_phone"
            android:background="@drawable/rectangle_shape"
            android:layout_width="match_parent"
            android:fontFamily="@font/peyda_regular"
            android:layout_height="160dp"

            android:gravity="center|right"
            android:inputType="phone" />

    </com.google.android.material.textfield.TextInputLayout>




</LinearLayout>



    </androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"
    app:layout_constraintTop_toBottomOf="@+id/cv_login"
    app:layout_constraintBottom_toBottomOf="@+id/cv_login"
    app:layout_constraintRight_toRightOf="parent"
   app:cardElevation="100dp"
    android:backgroundTint="@android:color/transparent"
    app:layout_constraintLeft_toLeftOf="parent">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/cv_login"
        app:layout_constraintBottom_toBottomOf="@+id/cv_login"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="#513960"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="ثبت"
        android:textSize="25sp"
        android:textColor="@color/white"/>


</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>